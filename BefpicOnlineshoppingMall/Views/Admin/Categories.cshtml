@model List<BefpicOnlineshoppingMall.DAL.Tbl_Category>

@{
    ViewBag.Title = "Categories";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}


<!-- Breadcrumbs-->

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="#">Dashboard</a>
    </li>
    <li class="breadcrumb-item active">Categories</li>

</ol>

<div class="card mb-4">
    <div class="card-header"><i class="fas fa-table mr-1"></i>Categories Details
    <a href="../Admin/AddCategory" class=" btn btn-info pull-right fa-plus">Add New </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Sr.No</th>
                        <th>Category Name</th>
                        <th>Action</th>
                        <th>Action</th>

                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Sr.No</th>
                        <th>Category Name</th>
                        <th>Action</th>
                        <th>Action</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td> @(Model.IndexOf(item) + 1) </td>
                        <td>@item.CategoryName</td>
                        <td>
                            @Html.ActionLink("Edit", "CategoryEdit", new { categoryId = item.CategoryId })
                        </td>
                        <td>
                            @Html.ActionLink("Delete", "CategoryDelete", new { categoryId = item.CategoryId })
                        </td>

                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

 