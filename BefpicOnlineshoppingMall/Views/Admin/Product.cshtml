@model IEnumerable<BefpicOnlineshoppingMall.DAL.Tbl_Product>

@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

<h2>Product</h2>

<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table mr-1"></i>Product Details
        <a href="../Admin/ProductAdd" class=" btn btn-info pull-right fa-plus">Add New </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Sr.No</th>
                        <th>Product Name</th>
                        <th>Action</th>
                        <th>Action</th>

                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Sr.No</th>
                        <th>Product Name</th>
                        <th>Action</th>
                        <th>Action</th>
                    </tr>
                </tfoot>
                <tbody>


                 @{  int count = 1; }
                    
                    @foreach (var item in Model)
                    {
                       
                        
                    <tr>
                        <td> @count </td>
                        <td>@item.ProductName</td>
                        <td> @Html.ActionLink("Edit", "ProductEdit", new { productId = @item.ProductId })</td>
                        <td> @Html.ActionLink("Delete", "ProductDelete", new { productId = @item.ProductId })</td>
                    </tr>
                        count++;
                    }

                    </tbody>
                </table>
        </div>
    </div>
</div>